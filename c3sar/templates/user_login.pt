<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="base">

  <tal:block metal:fill-slot="content">
        
    <h1> the login template!</h1>
    
    <div id="login_form">

      To login successfully, you have to be <a href="${request.route_url('register')}">registered</a> already.

    ${form.begin(request.route_url('login'))}
    <fieldset>
      ${form.csrf_token()}
      ${form.errorlist('username')}
      ${form.label('username', 'Username:')}
      ${form.text('username')}
      <br />
      ${form.errorlist('password')}
      ${form.label('password', 'Password:')}
      ${form.password('password')}
      <br />
      ${form.submit('submit', 'Login', class_='submit')}
    </fieldset>
    ${form.end()}  

    </div>
    
  </tal:block>
  
</html>
