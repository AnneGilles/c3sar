<html xmlns="http://www.w3.org/1999/xhtml" 
      xml:lang="en" 
      xmlns:tal="http://xml.zope.org/namespaces/tal"      
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="base">
      <!-- metal : use-macro="loggedinpt" -->
  
  <tal:block metal:fill-slot="content">
    <div id="main">
      <h1>List of Users</h1>
      
      <table border="1" cellpadding="10" width="90%">
	<tr><td>id</td><td>username</td><td>surname</td><td>lastname</td><td>email</td><td>[OK]</td><td>edit</td><td>view</td></tr>
	<tr tal:repeat="user users">
	  <td><a href="/user/view/${user.id}">${user.id}</a></td>
	  <td>${user.username}</td>
	  <td>${user.surname}</td>
	  <td>${user.lastname}</td>
	  <td><a href="mailto:  ${user.email_addresses[0].email_address}">  ${user.email_addresses[0].email_address}</a></td>
	  <td>${user.email_addresses[0].is_confirmed}</td>
	  <td><a href="/user/edit/${user.id}">edit</a></td>	  
	  <td><a href="/user/view/${user.id}">view</a></td>
	</tr>
      </table>
    </div>
  </tal:block>
</html>
