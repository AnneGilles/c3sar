<html xmlns="http://www.w3.org/1999/xhtml" 
      xml:lang="en" 
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="base">
  
  
  <tal:block metal:fill-slot="content">


    <h1> band settings </h1>

    <!-- $ foo {form.begin(request.route_url('band_edit'))} -->
    ${form.begin(request.url)}
        <fieldset>
            ${form.csrf_token()}
            ${form.errorlist('band_name')}
            ${form.label('band_name', 'Bandname:')}
            ${form.text('band_name')}
            <br />
            ${form.errorlist('band_homepage')}
            ${form.label('band_homepage', 'Homepage:')}
            ${form.text('band_homepage')}
            <br />
            ${form.errorlist('band_email')}
            ${form.label('band_email', 'Email:')}
            ${form.text('band_email')}
            <br />
            ${form.submit('form.submitted', 'Save', class_='submit')}
        </fieldset>
    ${form.end()}



    
  </tal:block>
  
  
</html>
