<html xmlns="http://www.w3.org/1999/xhtml" 
      xml:lang="en" 
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="base">

<tal:block metal:fill-slot="content">
    <h1>Register</h1>
    ${form.begin(request.route_url('register'))}
        <fieldset>
            ${form.csrf_token()}
            ${form.errorlist('username')}
            ${form.label('username', 'Username:')}
            ${form.text('username')}
            <br />
            ${form.errorlist('password')}
            ${form.label('password', 'Password:')}
            ${form.password('password')}
            <br />
            ${form.errorlist('confirm_password')}
            ${form.label('confirm_password', 'Confirm password:')}
            ${form.password('confirm_password')}
            <br />
            ${form.errorlist('user_surname')}
            ${form.label('user_surname', 'Surname:')}
            ${form.text('user_surname')}
            <br />
            ${form.errorlist('user_lastname')}
            ${form.label('user_lastname', 'Lastname:')}
            ${form.text('user_lastname')}
            <br />
            ${form.errorlist('user_email')}
            ${form.label('user_email', 'Email:')}
            ${form.text('user_email')}
            <br />
            ${form.submit('form.submitted', 'Register', class_='submit')}
        </fieldset>
    ${form.end()}
</tal:block>

</html>
